terraform {
  required_providers {
    azurerm = {
      source  = "hashicorp/azurerm"
      version = "~> 4.0"
    }
  }
}

provider "azurerm" {
  features {
    resource_group {
      prevent_deletion_if_contains_resources = false
    }
  }
  # Se recomienda no hardcodear el ID aquí. 
  # Terraform lo usará de tu sesión activa de Azure CLI.
}
